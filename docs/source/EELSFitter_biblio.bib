@article{Sakaguchi2016,
         title = {Measurement of the dielectric function of α-Al2O3 by transmission electron microscopy – Electron energy-loss spectroscopy without Cerenkov radiation effects},
         journal = {Ultramicroscopy},
         volume = {169},
         pages = {37-43},
         year = {2016},
